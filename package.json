{
  "name": "pascal-utils",
  "author": "Elhanan Flesch",
  "description": "Utility functions for compilation of simple pascal programs, with the Free Pascal compiler, in Node.js.",
  "license": "MIT",
  "version": "1.0.0",
  "homepage": "https://github.com/synthetic-borealis/pascal-utils.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/synthetic-borealis/hirnfick.js.git"
  },
  "bugs": {
    "url": "https://github.com/synthetic-borealis/pascal-utils.js/issues"
  },
  "keywords": [
    "Pascal",
    "Testing"
  ],
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "files": [
    "lib",
    "types",
    "docs"
  ],
  "scripts": {
    "lint": "eslint lib/**/*.js __tests__/**/*.js scripts/**/*.js",
    "test": "jest",
    "coverage": "jest --coverage",
    "docs": "node scripts/build-docs.js",
    "build:ts": "tsc lib/index.js --declaration --allowJs --emitDeclarationOnly --outDir ./types",
    "build": "run-p build:*",
    "clean:ts": "rimraf types",
    "clean": "run-p clean:*",
    "prepack": "yarn clean && yarn build",
    "postpack": "yarn clean",
    "prepublish": "in-publish && yarn clean && yarn build || not-in-publish",
    "postpublish": "yarn clean"
  },
  "devDependencies": {
    "eslint": "^8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8.7",
    "in-publish": "^2.0.1",
    "jest": "^28.1.3",
    "jsdoc-to-markdown": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  }
}
